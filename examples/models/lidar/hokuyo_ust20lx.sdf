<?xml version="1.0"?>
<sdf version="1.6">
  <model name="hokuyo_ust20lx">
    <!--
      Hokuyo UST-20LX
      FOV: 270deg
      Horizontal Angular Resolution: 0.25deg
      Min Range: 0.06m
      Max Range: 20m
      Resolution: 1mm
      Accuracy: 4cm
      Rate: 40 Hz
      Datasheet: https://www.hokuyo-usa.com/application/files/5714/7196/1954/UST-20LX_Specifications.pdf
    -->
    <link name="link1">
      <sensor name="laser" type="gpu_lidar">
        <topic>/scan</topic>
        <pose>0 0 0.0175 0 -0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>1080</samples>
              <resolution>1</resolution>
              <min_angle>-2.35619</min_angle>
              <max_angle>2.35619</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.06</min>
            <max>20.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
        <always_on>1</always_on>
        <update_rate>40</update_rate>
        <visualize>true</visualize>
      </sensor>
    </link>
  </model>
</sdf>


